<h1>All Posts</h1>

<div id="search_box">
    <%= form_tag(posts_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <div class="input-append">
        <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Request" %>
        <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
             of using a Rails form helper -->
        <button class="btn" type="submit">Search</button>
      </div>
    <% end %>
</div>
<p id="notice"><%= notice %></p>

<%= paginate @posts %>
    <% @posts.each do |post| %>
      <h2><%= link_to post.title, post %></h2>
      <p><%= post.body_snippet %></p>
      <% if can? :manage, @post %>
        <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-default' %>
        <%= link_to 'Delete', post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
<br>

