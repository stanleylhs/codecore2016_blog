<%= simple_form_for @post, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :category_id, collection: Category.order(:name), label_method: :name, value_method: :id, label: "Category", include_blank: false %>
  <%# f.collection_select(:category_id, Category.order(:name), :id, :name) %>
  <%= f.simple_fields_for :post_attachments, @post_attachment do |image_form| %>
    <%= image_form.file_field :image, multiple: true,
                   name: "post_attachments[image][]" %>
    <% end %>
    <%= f.button :submit %>
<% end %>




