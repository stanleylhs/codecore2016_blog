<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category_name %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% @post_attachments.each do |p| %>
  <div class="image"><%= image_tag p.image.url(:large) %></div>
  <%= link_to "Edit Attachment", edit_post_attachment_path(p) %>
<% end %>

<p>
  <strong>Author:</strong>
  <%= @post.user_full_name %>
</p>

<div id="post-favourite"><%= render '/favourites/post_favourite' %></div>
<div id='comment-form'>
<h2>Add a comment:</h2>
<%= render "comments/form" %>
</div>
<div class="comments">
<h2>Comments</h2>
<%= render @post.comments %>
</div>
<%# Where @document = Document.find(params[:id]) and @comment = Comment.new. %>
<% if can? :manage, @post %>
<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-default' %>
<%= link_to 'Delete', @post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', posts_path, class: 'btn btn-primary' %>
